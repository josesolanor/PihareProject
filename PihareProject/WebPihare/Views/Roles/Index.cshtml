@model IEnumerable<WebPihare.Entities.Role>

@{
    ViewData["Title"] = "Index";
}

<h2>Roles</h2>

<p>
    <a asp-action="Create">Crear nuevo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.RoleValue)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RoleDescription)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RoleValue)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RoleDescription)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.RoleId">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.RoleId">Detalles</a> |
                <a asp-action="Delete" asp-route-id="@item.RoleId">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
