@model WebPihare.Entities.Visitregistration

@{
    ViewData["Title"] = "Edit";
}

<h2>Editar</h2>

<h4>Registro de Visita</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="VisitRegistrationId" />
            <div class="form-group">
                <label asp-for="VisitDay" class="control-label"></label>
                <div style="width: 100%" class="form-control" id="VisitDay1" />
                <span asp-validation-for="VisitDay" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Observations" class="control-label"></label>
                <input asp-for="Observations" class="form-control" />
                <span asp-validation-for="Observations" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClientId" class="control-label"></label>
                <select asp-for="ClientId" class="form-control" asp-items="ViewBag.ClientId"></select>
                <span asp-validation-for="ClientId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DepartmentId" class="control-label"></label>
                <select asp-for="DepartmentId" class="form-control" asp-items="ViewBag.DepartmentId"></select>
                <span asp-validation-for="DepartmentId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CommisionerId" class="control-label"></label>
                <select asp-for="CommisionerId" class="form-control" asp-items="ViewBag.CommisionerId"></select>
                <span asp-validation-for="CommisionerId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StateVisitStateId" class="control-label"></label>
                <select asp-for="StateVisitStateId" class="form-control" asp-items="ViewBag.StateVisitStateId"></select>
                <span asp-validation-for="StateVisitStateId" class="text-danger"></span>
            </div>
            <input type="hidden" id="VisitDayDx" name="VisitDayDx" value="" />
            <input type="hidden" asp-for="VisitDay" />
            <input type="hidden" asp-for="StringDate" />
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-default" />
            </div>
        </form>
    </div>
    <div>
        <a asp-action="Index">Volver a la lista</a>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<script>
    $(function () {
        var dateGet = $('#StringDate').val();

        var now = new Date(dateGet.toString());

        if (isNaN(now.getTime())) {
            now = new Date();
        }

        $('#VisitDayDx').val(now);

        $("#VisitDay1").dxDateBox({
            type: "datetime",
            value: now,
            displayFormat: "dd/MM/yyy HH:mm",
            min: new Date(),
            onValueChanged: function (e) {
                var newValue = String(e.value);
                $('#VisitDayDx').val(newValue);
            }
        });
    });
</script>