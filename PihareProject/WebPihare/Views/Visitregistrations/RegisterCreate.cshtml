                            <dd>
                                @Html.DisplayFor(model => model.Client.CI)
                            </dd>
                            <dt>
                                @Html.DisplayNameFor(model => model.Client.RegistredDate)
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.Client.RegistredDate)
