@model IEnumerable<WebPihare.Entities.Department>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DepartmentCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumberFloor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumberBedrooms)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DepartmentDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DeparmentPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DepartmentState)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DepartmentType)
            </th>
            <th>
                @Html.DisplayName("Seleccionar")
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DepartmentCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NumberFloor)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NumberBedrooms)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DepartmentDescription)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DeparmentPrice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DepartmentState.DepartmentStateValue)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DepartmentType.DepartmentTypeValue)
                </td>
                <td>
                    <div class="btn-group btn-group-xs" role="group" aria-label="...">

                        <a asp-controller="Clients" asp-action="Create" asp-route-id="@item.DepartmentId" type="button" class="btn btn-success"><i class="glyphicon glyphicon-plus"></i> Añadir</a>
                        <a asp-action="Edit" asp-route-id="@item.DepartmentId" type="button" class="btn btn-default"><i class="glyphicon glyphicon-pencil"></i> Edit</a>
                        <a asp-action="Details" asp-route-id="@item.DepartmentId" type="button" class="btn btn-default"><i class="glyphicon glyphicon-list"></i> Details</a>
                        <a asp-action="Delete" asp-route-id="@item.DepartmentId" type="button" class="btn btn-danger"><i class="glyphicon glyphicon-trash"></i> Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

<button type="button" class="btn btn-default" data-toggle="modal" data-target="#myModal">Modal ejemplo</button>


<!-- Modal -->
<div id="myModal" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Modal Header</h4>
            </div>
            <div class="modal-body">
                <p>Some text in the modal.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>

    </div>
</div>
